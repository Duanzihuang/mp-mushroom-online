<template name="3db40490">
  <view class="_div data-v-2b7c9040 play-container" wx:if="{{course_detail}}">
    <view class="_div data-v-2b7c9040 cover_image"><video bindplay="handleProxy" id="myVideo" src="{{video_url}}" controls data-eventid="{{'0'}}" data-comkey="{{$k}}" class="_video data-v-2b7c9040"></video></view>
    <view class="_div data-v-2b7c9040 introduction">
      <view class="_div data-v-2b7c9040 title-and-info">
        <view class="_p data-v-2b7c9040 title">{{course_detail.course.title}}</view>
        <view class="_p data-v-2b7c9040 info"><label class="_span data-v-2b7c9040">{{course_detail.course.study_count}}人学过</label> <label class="_span data-v-2b7c9040">难度:{{level}}人学过</label> <label class="_span data-v-2b7c9040">时长:{{course_detail.course.class_hour}}</label></view>
      </view>
      <view class="_div data-v-2b7c9040 comment">
        <image src="/static/images/evaluate@2x.png" alt class="_img data-v-2b7c9040"></image>
      </view>
    </view>
    <view class="_div data-v-2b7c9040 course-progress">
      <view class="_div data-v-2b7c9040 title">课程进度</view>
      <view class="_div data-v-2b7c9040 catelog-container">
        <view bindtap="handleProxy" wx:key="item.id" key="{{item.id}}" data-eventid="{{'1_'+index}}" data-comkey="{{$k}}" wx:for="{{course_detail.videos}}" wx:for-index="index" wx:for-item="item" class="_p data-v-2b7c9040"><label class="_span data-v-2b7c9040 {{[index === playIndex ? 'active' : '']}}">{{index+1}}.{{item.name}}</label> <label wx:if="{{item.is_study == 1}}" class="_span data-v-2b7c9040 studied">已学习</label><label wx:else class="_span data-v-2b7c9040 {{['time', index === playIndex ? 'active' : '']}}">{{item.duration}}</label></view>
      </view>
    </view>
  </view>
</template>